{
  "name": "ankiplus",
  "productName": "AnkiPlus",
  "description": "Another Anki Application using Electron",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "repository": {
    "type": "git",
    "url": "https://github.com/DotHide/AnkiPlus.git"
  },
  "author": {
    "name": "Martin_nett",
    "email": "dothide@gmail.com",
    "url": "www.dothide.com"
  },
  "scripts": {
    "test": "karma start karma.conf.js",
    "test:single": "karma start karma-travis.conf.js",
    "start": "electron .",
    "commit": "git-cz",
    "build": "electron-packager . --out=dist --app-version=$npm_package_version --prune --asar --overwrite --all",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "keywords": [
    "anki",
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "electron-debug": "^0.5.0"
  },
  "devDependencies": {
    "angular": "1.5.3",
    "commitizen": "2.7.6",
    "cz-conventional-changelog": "1.1.5",
    "electron-packager": "^6.0.0",
    "electron-prebuilt": "^0.37.5",
    "jasmine-core": "2.4.1",
    "karma": "0.13.22",
    "karma-jasmine": "0.3.8",
    "karma-phantomjs-launcher": "1.0.0",
    "phantomjs-prebuilt": "2.1.7",
    "semantic-release": "^4.3.5",
    "semantic-release-cli": "1.4.1",
    "xo": "^0.14.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
